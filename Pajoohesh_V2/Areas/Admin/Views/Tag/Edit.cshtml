@using Pajoohesh_V2.Model.Main
@model Pajoohesh_V2.Model.ViewModels.Branch.ForSite.ForRepository.Tags.TagEditVm

<div class="content">
    <h2 class="content-header">ویرایش تگ</h2>
    <form action="#" method="POST" class="profile-form" enctype="multipart/form-data">
        <input type="hidden" asp-for="CreatorId" />
        <input type="hidden" asp-for="OriginalCreateDate" />
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="" class="form-label">عنوان تگ:</label>
            <input type="text" class="form-input" asp-for="Title">
        </div>
        <div class="form-group">
            <label for="" class="form-label">وضعیت:</label>
            <select class="form-input form-input-select" asp-for="State">
                <option value="1">فعال</option>
                <option value="0">غیر فعال</option>
            </select>
        </div>
        <button type="submit" class="btn btn-load-more">ذخیره</button>
    </form>
</div>