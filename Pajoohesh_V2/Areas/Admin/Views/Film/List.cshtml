@model Pajoohesh_V2.Model.ViewModels.Branch.ForSite.ForRepository.Films.FilmListVm
@{
    Layout = "_Layout";
}
<div class="content">
    <a asp-area="Admin" asp-controller="Film" asp-action="Add" class="upload-wrap">
        <span class="upload-icon mdi mdi-cloud-upload-outline"></span>
        <span class="upload-text">برای آپلود ویدئو کلیک کنید.</span>
    </a>
    <div class="subject">
        <div class="subject-header-wrap">
            @if (Model.FilmListBaseVms.Any())
            {
                <h2 class="subject-header">فیلم های من</h2>
            }
        </div>
        <div class="video-cards-wrap">
            @foreach (var item in Model.FilmListBaseVms)
            {
                <div class="video-card">
                    <a asp-area="User" asp-controller="Home" asp-action="Watch" asp-route-id="@item.Id" class="video-card-link"></a>
                    <div class="video-card-options-wrap">
                        <div class="video-card-options-image-wrap">
                            <img src="~/images/more-options-icon.png" alt="More" class="video-card-options-image">
                        </div>
                        <ul class="video-card-options-list">
                            <li class="video-card-options-item">
                                <a asp-area="Admin" asp-controller="Film" asp-action="Edit" asp-route-id="@item.Id" class="video-card-options-link">ویرایش</a>
                            </li>
                            <li class="video-card-options-item">
                                <a asp-area="Admin" asp-controller="Film" asp-action="Delete" asp-route-id="@item.Id" class="video-card-options-link">حذف</a>
                            </li>
                        </ul>
                    </div>
                    <div class="video-card-image" style="background-image: url('/Media/Images/Film/@item.ImageUrl');"></div>
                    <span class="video-card-film-name">@item.Name</span>
                    <span class="video-card-film-desc">@item.Description</span>
                    <span class="video-card-film-upload-date">@item.UploadDate</span>
                </div>
            }
        </div>
    </div>
    @if (Model.FilmListBaseVms.Any())
    {
        <ul class="pagination" style="margin-top: 20px">
            @if (Model.NumberOfPages <= 7)
            {
                for (int i = 0; i < Model.NumberOfPages; i++)
                {
                    if (Model.CurrentPageNumber == i + 1)
                    {
                        <li class="pagination-item">
                            <a class="pagination-link" style="background-color: white; color: blue; border: 1px solid blue;">@(i+1)</a>
                        </li>
                    }
                    else
                    {
                        <li class="pagination-item">
                            <a asp-area="Admin" asp-controller="Film" asp-action="List" asp-route-pageNumber="@(i+1)" class="pagination-link">@(i+1)</a>
                        </li>
                    }
                }
            }
            else
            {
                if (Model.CurrentPageNumber <= 3 || Model.CurrentPageNumber >= Model.NumberOfPages - 2)
                {
                    if (Model.CurrentPageNumber <= 2 || Model.CurrentPageNumber >= Model.NumberOfPages - 1)
                    {
                        if (Model.CurrentPageNumber == 1)
                        {
                            <li class="pagination-item">
                                <a class="pagination-link" style="background-color: white; color: blue; border: 1px solid blue;">1</a>
                            </li>
                        }
                        else
                        {
                            <li class="pagination-item">
                                <a asp-area="Admin" asp-controller="Film" asp-action="List" asp-route-pageNumber="2" class="pagination-link">2</a>
                            </li>
                        }

                        if (Model.CurrentPageNumber == 2)
                        {
                            <li class="pagination-item">
                                <a class="pagination-link" style="background-color: white; color: blue; border: 1px solid blue;">2</a>
                            </li>
                        }
                        else
                        {
                            <li class="pagination-item">
                                <a asp-area="Admin" asp-controller="Film" asp-action="List" asp-route-pageNumber="2" class="pagination-link">2</a>
                            </li>
                        }

                        <li class="pagination-item">
                            <span class="pagination-disabled-link">...</span>
                        </li>

                        if (Model.CurrentPageNumber == Model.NumberOfPages - 1)
                        {
                            <li class="pagination-item">
                                <a class="pagination-link" style="background-color: white; color: blue; border: 1px solid blue;">@(Model.NumberOfPages - 1)</a>
                            </li>
                        }
                        else
                        {
                            <li class="pagination-item">
                                <a asp-area="Admin" asp-controller="Film" asp-action="List" asp-route-pageNumber="@(Model.NumberOfPages - 1)" class="pagination-link">@(Model.NumberOfPages - 1)</a>
                            </li>
                        }

                        if (Model.CurrentPageNumber == Model.NumberOfPages)
                        {
                            <li class="pagination-item">
                                <a class="pagination-link" style="background-color: white; color: blue; border: 1px solid blue;">@(Model.NumberOfPages)</a>
                            </li>
                        }
                        else
                        {
                            <li class="pagination-item">
                                <a asp-area="Admin" asp-controller="Film" asp-action="List" asp-route-pageNumber="@(Model.NumberOfPages)" class="pagination-link">@(Model.NumberOfPages)</a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="pagination-item">
                            <a asp-area="Admin" asp-controller="Film" asp-action="List" asp-route-pageNumber="1" class="pagination-link">1</a>
                        </li>
                        <li class="pagination-item">
                            <span class="pagination-disabled-link">...</span>
                        </li>
                        <li class="pagination-item">
                            <a class="pagination-link" style="background-color: white; color: blue; border: 1px solid blue;">@(Model.CurrentPageNumber)</a>
                        </li>
                        <li class="pagination-item">
                            <span class="pagination-disabled-link">...</span>
                        </li>
                        <li class="pagination-item">
                            <a asp-area="Admin" asp-controller="Film" asp-action="List" asp-route-pageNumber="@(Model.NumberOfPages)" class="pagination-link">@(Model.NumberOfPages)</a>
                        </li>
                    }
                }
                else
                {
                    <li class="pagination-item">
                        <a asp-area="Admin" asp-controller="Film" asp-action="List" asp-route-pageNumber="1" class="pagination-link">1</a>
                    </li>
                    <li class="pagination-item">
                        <span class="pagination-disabled-link">...</span>
                    </li>
                    <li class="pagination-item">
                        <a class="pagination-link" style="background-color: white; color: blue; border: 1px solid blue;">@(Model.CurrentPageNumber)</a>
                    </li>
                    <li class="pagination-item">
                        <span class="pagination-disabled-link">...</span>
                    </li>
                    <li class="pagination-item">
                        <a asp-area="Admin" asp-controller="Film" asp-action="List" asp-route-pageNumber="@(Model.NumberOfPages)" class="pagination-link">@(Model.NumberOfPages)</a>
                    </li>
                }
            }
        </ul>
    }
</div>