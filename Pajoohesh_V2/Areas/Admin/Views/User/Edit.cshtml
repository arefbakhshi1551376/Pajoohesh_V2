@model Pajoohesh_V2.Model.ViewModels.Branch.ForSite.ForRepository.Users.UserEditVm
@{
    Layout = "_Layout";
}
<div class="content">
    <h2 class="content-header">ویرایش اطلاعات شخصی</h2>
    <form asp-area="Admin" asp-controller="User" asp-action="Edit" method="POST" class="profile-form" enctype="multipart/form-data">
        <input type="hidden" asp-for="ImageUrl" />
        <input type="hidden" asp-for="IsAccessValid" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <div class="form-group full-width">
            <input type="file" class="user-avatar-form-input" accept="" id="userAvatar" asp-for="UserAvatar">
            <div class="user-avatar" style="background-image: url('/Media/Images/User/@Model.ImageUrl');">
                <label for="userAvatar" class="user-avatar-label mdi mdi-camera"></label>
            </div>
            <span id="file-selected-notify" class="form-desc" style="text-align: center; color: forestgreen; visibility: hidden;">عکس مورد نظر شما انتخاب شد.</span>
        </div>
        <div class="form-group">
            <label for="" class="form-label">نام:</label>
            <input type="text" class="form-input" asp-for="Name">
        </div>
        <div class="form-group">
            <label for="" class="form-label">نام خانوادگی:</label>
            <input type="text" class="form-input" asp-for="Family">
        </div>
        <div class="form-group">
            <label for="" class="form-label">نام کاربری:</label>
            <input type="text" class="form-input" asp-for="UserName">
        </div>
        <div class="form-group">
            <label for="" class="form-label">ایمیل:</label>
            <input type="email" class="form-input" asp-for="Email">
        </div>
        <div class="form-group full-width">
            <label for="" class="form-label">رمز عبور فعلی:</label>
            <input type="password" class="form-input" asp-for="OldPassword">
        </div>
        <div class="form-group">
            <label for="" class="form-label">رمز عبور جدید:</label>
            <input type="password" class="form-input" asp-for="NewPassword">
        </div>
        <div class="form-group">
            <label for="" class="form-label">تکرار رمز عبور جدید:</label>
            <input type="password" class="form-input" asp-for="ConfirmPassword">
        </div>
        <button type="submit" class="btn btn-load-more">ذخیره تغییرات</button>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#userAvatar").change(function () {
                $("#file-selected-notify").css("visibility", "visible");
            });
        });
    </script>
}