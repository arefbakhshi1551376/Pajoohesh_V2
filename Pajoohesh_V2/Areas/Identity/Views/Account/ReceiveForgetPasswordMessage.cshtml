@model Pajoohesh_V2.Model.ViewModels.Branch.ForSite.ForRepository.ForgetPasswords.ReceiveForgetPasswordMessageVm
@{
    Layout = "_Layout2";
}
<body class="full-height">
<div class="login-register-bg" style="background-image: url('~/images/login-register-bg.jpg');"></div>
<div class="login-register-card">
    <h2 class="card-header">فراموشی رمز عبور</h2>
    <div>
        <form asp-area="Identity" asp-controller="Account" asp-action="ReceiveForgetPasswordMessage" method="POST">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Key" />
            <input type="text" placeholder="رمز عبور جدید" asp-for="NewPassword" class="single-form-input">
            <input type="text" placeholder="تکرار رمز عبور جدید" asp-for="ConfirmPassword" class="single-form-input">
            <span class="error-message"></span>
            <button type="submit" class="btn btn-login full-width">تایید رمز عبور جدید</button>
        </form>
        <a asp-area="User" asp-controller="Home" asp-action="List" class="btn btn-home full-width" style="margin-top: 10px;">صفحه اصلی</a>
    </div>
</div>

<!-- Start Scripts -->
<script src="~/jquery/jquery-3.6.0.js"></script>
<!-- End Scripts -->
</body>